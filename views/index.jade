html
    head
      title admin_login
      meta(charset='utf-8')
      link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
      link(rel='stylesheet', type='text/css', href='/css/admin_login.css')
    body
      form(action='login', method='post')
        .container(style='margin-top: 15%;')
          .row
            .col-md-4.col-md-offset-4
              .panel.panel-default
                h4 User Login
                br
                .panel-body
                  .form-group
                    input.form-control(style='margin-top: 20px;', type='username', name='user', placeholder='Enter User Name')
                  .form-group
                    input.form-control(type='password', style='margin-top: 20px;', name='password', placeholder='Enter password')
                  .form-group
                    input.btn.btn-success.btn-lg.btn-block(type='submit', name='submit', value='Login')
                .lock
                  i.fa.fa-lock
